@model BookViewModel;

<div class="card shadow border-0 mt-4">
    <div class="card-border  ml-0 py-3">
        <div class="row">
            <div>
                <h2 class="text-dark">@(Model.book.Id!=0?"Update":"Create") Book</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4 form-floating">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="book.Id" hidden/>
            <input asp-for="book.ImageUrl" hidden />
            <div class="row">
                <div class="col-10">
                    <div class="border p-3">
                        <div class="row p-1">
                            <label asp-for="book.Title" class="col-sm-2 col-form-label text-dark">Title</label>
                            <input asp-for="book.Title" type="text" class="form-control" id="title" placeholder="Title">
                            <span asp-validation-for="book.Title" class="text-danger"></span>
                        </div>
                        <div class="row p-1">
                            <label asp-for="book.ISBN" class="form-label mt-4 text-dark">ISBN</label>
                            <input asp-for="book.ISBN" type="text" class="form-control pd-3" id="isbn" placeholder="ISBN">
                            <span asp-validation-for="book.ISBN" class="text-danger"></span>
                        </div>
                        <div class="row p-1">
                            <label asp-for="book.Description" class="form-label mt-4 text-dark">Description (Optional)</label>
                            <textarea asp-for="book.Description" type="text" class="form-control pd-3" id="desc" placeholder="Description"></textarea>
                            <span asp-validation-for="book.ISBN" class="text-danger"></span>
                        </div>
                        <div class="row p-1">
                            <label asp-for="book.Author" class="form-label mt-4 text-dark">Author</label>
                            <input asp-for="book.Author" type="text" class="form-control pd-3" id="auhtor" placeholder="Author">
                            <span asp-validation-for="book.Author" class="text-danger"></span>
                        </div>
                        <div class="row p-1">
                            <label asp-for="book.Price" class="form-label mt-4 text-dark">Price</label>
                            <input asp-for="book.Price" type="number" class="form-control pd-3" id="price" placeholder="Price">
                            <span asp-validation-for="book.Price" class="text-danger"></span>
                        </div>
                        <div class="row p-1">
                            <label asp-for="@Model.book.ImageUrl" class="text-dark">Book Image</label>
                            <i class="bi bi-card-image"></i>
                            <input type="file" name="file" class="form-control pd-3 text-dark" id="file" placeholder="BookImage">
                        </div>
                        <div class="form-floating py-2 col-12">
                            <select  asp-for="@Model.book.CategoryId" asp-items="@Model.CategoryList" class="form-select border-0 shadow text-dark">
                                <option disabled selected>--Select Category--</option>
                            </select>
                            <label asp-for="book.CategoryId" class="ms-2 text-dark"></label>
                            <span asp-validation-for="book.CategoryId" class="text-danger"></span>
                        </div>
                        @if (Model.book.Id != 0)
                        {
                            <button type="submit" class="btn btn-primary m-3">Update</button>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-primary m-3 text-dark">Add</button>
                        }
                        <a class="text-dark" asp-controller="Book" asp-action="Index" class="btn btn-primary">
                            Back to Books
                        </a>
                    </div>
                </div>
                <div class="col-2">
                    <img src="@Model.book.ImageUrl" />
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
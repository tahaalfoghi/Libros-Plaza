@model Book

    <section class="py-5">
            <input asp-for="Id" hidden/>
        <div class="container">
            <div class="row gx-5">
                <aside class="col-lg-6">
                    <div class="border rounded-4 mb-3 d-flex justify-content-center">
                        <img style="width: 70%;" class="rounded-4 fit" src="@Model.ImageUrl" />
                    </div>
                </aside>
                <main class="col-lg-6">
                    <div class="ps-lg-3">
                        <div class="d-flex flex-row my-3">
                            <h1 class="text-dark">@Model.Title</h1>
                        </div>

                        <div class="mb-3 ">
                        <span class="h5 text-dark"><strong>Price:</strong></span>
                            <span class="h5 text-dark">@Model.Price.ToString("c")</span>
                        </div>

                    <p class="text-dark"><strong>Description:</strong> </p>
                        <p class="text-dark">@Model.Description</p>
                        <div class="row text-dark">
                        <dt class="col-3"><strong>Category:</strong></dt>
                            <dd class="col-9">@Model.Category.Name</dd>

                        <dt class="col-3"><strong>Auhtor:</strong></dt>
                            <dd class="col-9">@Model.Author</dd>

                        <dt class="col-3"><strong>ISBN:</strong></dt>
                            <dd class="col-9">@Model.ISBN</dd>
                        </div>
                        <hr />
                        <button type="submit"  class="btn btn-warning " id="dHover"> <i class="bi bi-bag"></i>Buy now </button>
                        <a asp-controller="Cart"asp-action="AddToCart" asp-route-bookId="@Model.Id" class="btn btn-primary shadow-0 " id="dHover"> <i class="bi bi-cart-plus"></i> Add to cart </a>
                        <a id="dHover" asp-controller="Home" asp-action="Index" class="btn btn-primary border border-secondary py-2 icon-hover px-3"><i class="bi bi-house"></i> Back to Home</a>
                    </div>
                </main>
            </div>
        </div>
    </section>
<style>
    #dHover:hover {
        background-color: lightskyblue;
    }
</style>
